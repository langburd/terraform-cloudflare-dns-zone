{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enablePreCommit",
    ":semanticCommits",
    "config:recommended",
    "helpers:pinDockerDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "automerge": true,
      "description": "Automerge non-major updates",
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "timezone": "Asia/Jerusalem"
}
